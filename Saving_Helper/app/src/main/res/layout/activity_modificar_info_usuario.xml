<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ModificarInfoUsuarioActivity">

    <Toolbar
        android:id="@+id/toolbarRegistro2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#003C8F"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btn_menu_back"
            android:layout_width="35sp"
            android:layout_height="30sp"
            android:background="@android:drawable/ic_dialog_dialer"
            android:onClick="activity_menu_con_iconos" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40sp"
            android:text="Modificar información"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            tools:layout_editor_absoluteX="65sp"
            tools:layout_editor_absoluteY="13sp" />

    </Toolbar>

    <TextView
        android:id="@+id/labelContraseñaNueva"
        android:layout_width="144sp"
        android:layout_height="24sp"
        android:layout_marginStart="50sp"
        android:layout_marginEnd="217sp"
        android:text="Contraseña nueva"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labelCambio" />

    <TextView
        android:id="@+id/labelcontraseñaVerificacion"
        android:layout_width="89sp"
        android:layout_height="21sp"
        android:layout_marginStart="50sp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="272sp"
        android:text="Verificación de contraseña"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.111"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ContraseñaNueva" />

    <EditText
        android:id="@+id/CorreoMod2"
        android:layout_width="290dp"
        android:layout_height="47dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="55dp"
        android:ems="10"
        android:hint="Ingrese su correo"
        android:imeOptions="actionNext"
        android:inputType="textPersonName"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/colorHint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labelCorreoMod" />

    <EditText
        android:id="@+id/userNameMod"
        android:layout_width="286dp"
        android:layout_height="48dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="59dp"
        android:ems="10"
        android:hint="Ingrese su nombre de usuario"
        android:imeOptions="actionDone"
        android:inputType="textPersonName"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/colorHint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labelUserNameMod" />

    <TextView
        android:id="@+id/labelUserNameMod"
        android:layout_width="144sp"
        android:layout_height="24sp"
        android:layout_marginStart="50sp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="217sp"
        android:text="Nombre de usuario"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CorreoMod2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="317sp"
        android:layout_height="21sp"
        android:layout_marginStart="34sp"
        android:layout_marginEnd="60sp"
        android:text="________________________________________________"
        android:textColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userNameMod" />

    <TextView
        android:id="@+id/labelCambio"
        android:layout_width="172sp"
        android:layout_height="21sp"
        android:layout_marginStart="119sp"
        android:layout_marginEnd="120sp"
        android:text="Cambio de contraseña"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/apellidosMod"
        android:layout_width="288dp"
        android:layout_height="46dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="55dp"
        android:ems="10"
        android:hint="Ingrese sus apellidos"
        android:imeOptions="actionNext"
        android:inputType="textPersonName"
        android:textColor="@color/colorPrimary"
        android:textColorHighlight="@color/colorHint"
        android:textColorHint="@color/colorHint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labelApellidosMod" />

    <TextView
        android:id="@+id/labelCorreoMod"
        android:layout_width="144sp"
        android:layout_height="24sp"
        android:layout_marginStart="50sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="217sp"
        android:text="Correo"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/apellidosMod" />

    <TextView
        android:id="@+id/labelApellidosMod"
        android:layout_width="144sp"
        android:layout_height="24sp"
        android:layout_marginStart="50sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="217sp"
        android:text="Apellidos"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombrePilaMod" />

    <EditText
        android:id="@+id/nombrePilaMod"
        android:layout_width="291dp"
        android:layout_height="46dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="54dp"
        android:ems="10"
        android:hint="Ingrese su nombre de pila"
        android:imeOptions="actionNext"
        android:inputType="textPersonName"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/colorHint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labelNombrePilaMod" />

    <TextView
        android:id="@+id/labelNombrePilaMod"
        android:layout_width="144sp"
        android:layout_height="24sp"
        android:layout_marginStart="50sp"
        android:layout_marginTop="22sp"
        android:layout_marginEnd="217sp"
        android:text="Nombre de pila"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarRegistro2" />

    <Button
        android:id="@+id/botonEntrar3"
        android:layout_width="123sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="93sp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="39sp"
        android:layout_marginBottom="24sp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:onClick="actualizarDatosUsuario"
        android:text="Aceptar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/botonEntrar4"
        app:layout_constraintTop_toBottomOf="@+id/contraseñaVerificacion" />

    <Button
        android:id="@+id/botonEntrar4"
        android:layout_width="123sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="34sp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="24sp"
        android:backgroundTint="@color/colorAccent"
        android:onClick="activity_pantalla_inicio"
        android:text="Cancelar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contraseñaVerificacion" />

    <EditText
        android:id="@+id/ContraseñaNueva"
        android:layout_width="286dp"
        android:layout_height="43dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="59dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labelContraseñaNueva" />

    <EditText
        android:id="@+id/contraseñaVerificacion"
        android:layout_width="284dp"
        android:layout_height="41dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="59dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labelcontraseñaVerificacion" />

</androidx.constraintlayout.widget.ConstraintLayout>