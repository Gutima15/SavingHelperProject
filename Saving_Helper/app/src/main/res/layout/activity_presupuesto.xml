<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Presupuesto">

    <RelativeLayout
        android:id="@+id/Area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        >
        <Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#003C8F"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <Button
                android:id="@+id/btn_Estadistica_back"
                android:layout_width="25sp"
                android:layout_height="23sp"
                android:background="@android:drawable/ic_dialog_dialer"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40sp"
                android:text="Presupuesto"
                android:textColor="@android:color/white"
                android:textSize="22sp" />

        </Toolbar>

        <RelativeLayout
            android:id="@+id/SaldoDisponibleBackground"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:background="@drawable/redondo"
            android:layout_marginStart="25dp"
            android:layout_marginTop="90dp"
            >
        </RelativeLayout>

        <Button
            android:id="@+id/CambiarPresupuesto"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginStart="160dp"
            android:layout_marginTop="325dp"
            android:backgroundTint="@color/colorPrimary"
            android:text="Cambiar"
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/textoPresupuestoActual"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="125dp"
            android:text="Presupuesto para el periodo actual:"
            android:textColor="#FFFFFF"
            android:textSize="24dp"
            />
        <TextView
            android:id="@+id/TextoPeriodoActual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginTop="390dp"
            android:text="Tipo de periodo actual:"
            android:textColor="@color/colorPrimary"
            android:textSize="24dp"
            />

        <Button
            android:id="@+id/CambiarPeriodo"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginStart="160dp"
            android:layout_marginTop="500dp"
            android:backgroundTint="@color/colorPrimary"
            android:text="Cambiar"
            android:textColor="#FFFFFF"/>


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>