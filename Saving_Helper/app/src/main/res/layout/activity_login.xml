<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <ImageView
        android:id="@+id/Logo"
        android:layout_width="278sp"
        android:layout_height="278sp"
        android:layout_marginStart="72sp"
        android:layout_marginTop="56sp"
        android:layout_marginEnd="72sp"
        android:src="@drawable/saving_helper_tool"
        app:layout_constrainedHeight="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/botonEntrar"
        android:layout_width="123sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="155sp"
        android:layout_marginTop="30sp"
        android:layout_marginEnd="155sp"
        android:layout_marginBottom="100sp"
        android:backgroundTint="@color/colorPrimary"
        android:text="Entrar"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonRegistrarse" />

    <TextView
        android:id="@+id/labelContraseña"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="67sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="262sp"
        android:text="Contraseña"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombreUsuario" />

    <TextView
        android:id="@+id/savingHelper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="53sp"
        android:layout_marginEnd="53sp"
        android:text="Saving Helper"
        android:textColor="@color/colorPrimary"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Logo" />

    <TextView
        android:id="@+id/labelUsuario"
        android:layout_width="163sp"
        android:layout_height="27sp"
        android:layout_marginStart="67sp"
        android:layout_marginTop="20sp"
        android:layout_marginEnd="181sp"
        android:text="Nombre de usuario"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/savingHelper" />

    <EditText
        android:id="@+id/contraseña"
        android:layout_width="248sp"
        android:layout_height="44sp"
        android:layout_marginStart="67sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="96sp"
        android:ems="10"
        android:hint="Ingrese su contraseña"
        android:inputType="textPassword"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/colorHint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labelContraseña"
        android:imeOptions="actionDone"/>

    <EditText
        android:id="@+id/nombreUsuario"
        android:layout_width="247sp"
        android:layout_height="43sp"
        android:layout_marginStart="67sp"
        android:layout_marginTop="4sp"
        android:layout_marginEnd="97sp"
        android:ems="10"
        android:hint="Ingrese el nombre de usuario"
        android:inputType="textPersonName"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/colorHint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labelUsuario"
        android:imeOptions="actionNext"/>

    <TextView
        android:id="@+id/botonRegistrarse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="244sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="96sp"
        android:clickable="true"
        android:onClick="openRegistroActivity"
        android:text="Registrarse"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contraseña" />

</androidx.constraintlayout.widget.ConstraintLayout>