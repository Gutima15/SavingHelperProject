<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuConIconos">



    <ScrollView
        android:id="@+id/ScrollMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <RelativeLayout
            android:id="@+id/Menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            >

            <Toolbar
                android:id="@+id/toolbarMenuIconos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#003C8F"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <Button
                    android:id="@+id/btn_Estadistica_back"
                    android:layout_width="25sp"
                    android:layout_height="23sp"
                    android:background="@android:drawable/ic_dialog_dialer"
                    android:onClick="activity_menu_con_iconos"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40sp"
                    android:text="Menu de opciones"
                    android:textColor="@android:color/white"
                    android:textSize="22sp" />

            </Toolbar>

            <ImageButton
                android:id="@+id/PantallaInicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30sp"
                android:layout_marginTop="50sp"
                app:layout_constraintEnd_toStartOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/pantalladeinicio"
                android:onClick="activity_pantalla_inicio"
                />
            <ImageButton
                android:id="@+id/Presupuesto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="200sp"
                android:layout_marginTop="50sp"
                app:layout_constraintEnd_toStartOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/presupuesto"
                android:onClick="activity_presupuesto"
                />
            <ImageButton
                android:id="@+id/AgregarDinero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30sp"
                android:layout_marginTop="250sp"
                app:layout_constraintEnd_toStartOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/agregardinero"

                />
            <ImageButton
                android:id="@+id/AgregarGasto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="200sp"
                android:layout_marginTop="250sp"
                app:layout_constraintEnd_toStartOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/agregargasto" />
            <ImageButton
                android:id="@+id/Objetivo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30sp"
                android:layout_marginTop="450sp"
                app:layout_constraintEnd_toStartOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/obejtivodeahorro" />
            <ImageButton
                android:id="@+id/Etiquetas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="200sp"
                android:layout_marginTop="450sp"
                app:layout_constraintEnd_toStartOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/etiquetas" />
            <ImageButton
                android:id="@+id/Grafico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30sp"
                android:layout_marginTop="650sp"
                app:layout_constraintEnd_toStartOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/grafico"
                android:onClick="activity_graficas"
                />
            <ImageButton
                android:id="@+id/Config"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30sp"
                android:layout_marginTop="850sp"
                app:layout_constraintEnd_toStartOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/configuracion"
                android:onClick="activity_config"
                />
            <ImageButton
                android:id="@+id/QuienesSomos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="200sp"
                android:layout_marginTop="650sp"
                app:layout_constraintEnd_toStartOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/quienessomos"
                android:onClick="activity_quienes_somos"
                />

        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

